{
  "name": "recess-sorter",
  "version": "0.0.8",
  "description": "Sort css/scss/sass/less properties according to twitter recess rules.",
  "main": "index.js",
  "scripts": {
    "sass-lint-after": "sass-lint -c .sass-lint.yml 'tests/after/**/*.scss' -v -q",
    "sass-lint-before": "sass-lint -c .sass-lint.yml 'tests/before/**/*.scss' -v -q",
    "test-e2e": "node . -o=./tests/after/ ./tests/before/huge.scss ./tests/before/nested.scss && npm run sass-lint-after",
    "test": "node tests/sorter.spec",
    "lint": "eslint ./src ./tests index.js"
  },
  "author": "Szabolcs Kurdi",
  "license": "ISC",
  "devDependencies": {
    "eslint-config-standard": "5.3.1",
    "eslint-plugin-promise": "1.3.2",
    "eslint-plugin-standard": "1.3.2",
    "pre-commit": "1.1.3",
    "sass-lint": "1.8.2"
  },
  "dependencies": {
    "gonzales-pe": "3.3.6",
    "shelljs": "0.7.0",
    "yargs": "4.7.1"
  },
  "pre-commit": [
    "lint",
    "test",
    "test-e2e"
  ]
}
